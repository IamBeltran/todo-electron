{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "react",
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "impliedStrict": true,
        "classes": true,
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "mocha": true
  },
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "strict": [2,"global"],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "react/jsx-filename-extension": [0, { "extensions": [".js", ".jsx"] }],
    "import/no-dynamic-require": 0,
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": [
          "tools/**/*.js",
          "test/**/*.js",
          "gulpfile.js"
          ]
        }
    ],
    "no-param-reassign": ["error", { "props": false }],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 100,
        "trailingComma": "all"
      }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
